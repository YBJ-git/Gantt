# 프로덕션 환경 변수 설정
# 이 파일을 .env.production으로 복사하여 사용하세요.

# 데이터베이스 연결 설정
DB_HOST=production-db-server
DB_PORT=1433
DB_USER=prod_user
DB_PASSWORD=secure_password
DB_NAME=WorkloadOptimization

# 서버 설정
PORT=3001
NODE_ENV=production
LOG_LEVEL=error

# 인증 설정
JWT_SECRET=your_jwt_secret_key
JWT_EXPIRATION=8h

# 성능 최적화 설정
CACHE_ENABLED=true
CACHE_DURATION=3600
OPTIMIZATION_WORKER_COUNT=4

# 알림 설정
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=notifications@example.com
SMTP_PASSWORD=smtp_password
NOTIFICATION_FROM=noreply@workload-optimization.com

# CORS 설정
ALLOWED_ORIGINS=https://workload-optimization.com,https://admin.workload-optimization.com
